{
    // Defines the Visual Studio Code Tasks for building and debugging.
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build CODAL",
            "type": "shell",
            "options": {
                "cwd": "../codal"
            },
            "windows": {
                "command": "bash",
                "args": [
                    "-c",
                    "source ~/.profile ; export VERBOSE=1 ; python build.py"
                ]
            },
            "osx": {
                "command": "export VERBOSE=1 ; python build.py"
            },
            "linux": {
                "command": "export VERBOSE=1 ; python build.py"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "üîó Connect To STM32 Blue Pill",
            "type": "shell",
            "windows": {
                "command": "c:\\openocd\\bin\\openocd -f interface/stlink-v2.cfg -f target/stm32f1x.cfg -f scripts/connect.ocd"
            },
            "osx": {
                "command": "openocd -f interface/stlink-v2.cfg -f target/stm32f1x.cfg -f scripts/connect.ocd"
            },
            "linux": {
                "command": "openocd -f interface/stlink-v2.cfg -f target/stm32f1x.cfg -f scripts/connect.ocd"
            },
            "problemMatcher": [],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "üîó Emulate STM32 Blue Pill",
            "type": "shell",
            "windows": {
                "command": "bash",
                "args": [
                    "-c",
                    "../qemu_stm32/arm-softmmu/qemu-system-arm -M stm32-f103c8 -semihosting -kernel .pioenvs/bluepill_f103c8/firmware.bin"
                ]
            },
            "osx": {
                "command": "../qemu_stm32/arm-softmmu/qemu-system-arm -M stm32-f103c8 -semihosting -kernel .pioenvs/bluepill_f103c8/firmware.bin"
            },
            "linux": {
                "command": "../qemu_stm32/arm-softmmu/qemu-system-arm -M stm32-f103c8 -semihosting -kernel .pioenvs/bluepill_f103c8/firmware.bin"
            },
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):([^:]+):(FAIL):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "code": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "üêõ Emulate STM32 Blue Pill (Debug)",
            "type": "shell",
            "windows": {
                "command": "bash",
                "args": [
                    "-c",
                    "../qemu_stm32/arm-softmmu/qemu-system-arm -M stm32-f103c8 -s -S -semihosting -kernel .pioenvs/bluepill_f103c8/firmware.bin"
                ]
            },
            "osx": {
                "command": "../qemu_stm32/arm-softmmu/qemu-system-arm -M stm32-f103c8 -s -S -semihosting -kernel .pioenvs/bluepill_f103c8/firmware.bin"
            },
            "linux": {
                "command": "../qemu_stm32/arm-softmmu/qemu-system-arm -M stm32-f103c8 -s -S -semihosting -kernel .pioenvs/bluepill_f103c8/firmware.bin"
            },
            "problemMatcher": [],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "type": "PlatformIO",
            "task": "Build",
            "problemMatcher": [
                "$platformio"
            ]
        }
    ]
}